<div class="container">

  <div class="greeting">
    <%= image_tag 'logo.png', class: "greeting__image" %>
    <div class="greeting__message">
      <h2><%= current_user.user_name %>さんの通帳に記録されている本の一覧</h2>
    </div>
  </div>


  <div class="pagenagte-container">
    <div class="pagenate-header">
      <h5 class="mb-0">登録した日付順</h5>
      <h5 class="mb-0"><%= @books.length %> / <%= current_user.books.where(status: 0).length %>件</h5>
    </div>

    <%= react_component("molecules/logsEditCards/LogsEditCards", {booksDatas: @books, url: @url}) %>


    <%= will_paginate @books, previous_label: h("<"), next_label: h(">")   %>
  </div>




  <%= link_to profile_path, class: "btn btn-back" do %>
    <p class="mb-0"><i class="fa-solid fa-chevron-left"></i> 前の画面に戻る</p>
  <% end %>
  <div class="bottom-placehodler"></div>

</div>
